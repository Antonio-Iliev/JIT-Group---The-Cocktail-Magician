@model IEnumerable<CM.Web.Areas.Notifications.Models.NotificationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<h1 class="hdr3">Notifications</h1>

@if (Model.Count() == 0)
{
    <center>
        <h3 style="padding-bottom:100px">
            You have no notifications yet...
        </h3>
    </center>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th class="">
                    Notification From
                </th>
                <th>
                    Notification Description
                </th>
                <th class="">
                    Notification Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.IsSeen == true)
                {
                    <tr>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.Username)
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.Description)
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.EventDate)
                                </dd>
                            </dl>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <b>
                                        @Html.DisplayFor(model => item.Username)
                                    </b>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <b>
                                        @Html.DisplayFor(model => item.Description)
                                    </b>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <b>
                                        @Html.DisplayFor(model => item.EventDate)
                                    </b>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <form asp-action="MarkAsSeen" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn bg-info border-0">Mark as seen</button>
                            </form>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

