@model IEnumerable<NotificationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<h1 class="hdr3">Notifications</h1>

@if (Model.Count() == 0)
{
    <center>
        <h3 style="padding-bottom:100px">
            You have no notifications yet...
        </h3>
    </center>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <h5>
                        Notification From
                    </h5>
                </th>
                <th>
                    <h5>
                        Notification Description
                    </h5>
                </th>
                <th>
                    <h5>
                        Notification Date
                    </h5>
                </th>
                <th>
                    <h5></h5>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.IsSeen == true)
                {
                    <tr>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @item.Username
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @item.Description
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    @item.EventDate
                                </dd>
                            </dl>
                        </td>
                        <th>
                            <h5></h5>
                        </th>
                    </tr>
                }
                else
                {
                    <tr style="background-color:gold transparent">
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <h5>
                                        @item.Username
                                    </h5>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <h5>
                                        @item.Description
                                    </h5>
                                </dd>
                            </dl>
                        </td>
                        <td>
                            <dl class="row">
                                <dd class="col-sm-10">
                                    <h5>
                                        @item.EventDate
                                    </h5>
                                </dd>
                            </dl>
                        </td>
                        <td>

                            <form  asp-action="MarkAsSeen" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-default btn-sm notificationBtn" style="margin-bottom:5px">
                                    <i class="fa fa-eye" style="color:gold">
                                    </i><font style="color:gold"> Mark as seen</font>
                                </button>
                            </form>
                            <form asp-action="MarkAsSeen" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-default btn-sm" style="margin-bottom:5px; outline-width:80px"><font style="color:gold"><i class="fa fa-trash-o"></i> Delete</font></button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $('form').on('submit', function (e) {
            e.preventDefault();

            const thisForm = $(this);

            $.post(thisForm.attr('action'), {}, response => thisForm.closest('tr').replaceWith(response));
        });
    </script>
}
