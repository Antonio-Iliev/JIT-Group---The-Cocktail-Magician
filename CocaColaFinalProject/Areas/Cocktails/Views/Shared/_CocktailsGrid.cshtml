@model CocktailsListingViewModel
@{
    ViewData["Title"] = "ListCocktails";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<div id="cocktailsTable">
    <table class="table">
        <thead>
            <tr>
                <th><h5>Cocktail's Picture</h5></th>
                <th>
                    <h5>
                        <a asp-action="ListCocktails" asp-route-sortOrder="@ViewData["NameSortCriteria"]">&uarr;&darr; Name</a>
                    </h5>
                </th>
                <th>
                    <h5 style="padding-right:60px">
                        <a asp-action="ListCocktails" asp-route-sortOrder="@ViewData["RatingSortCriteria"]">&uarr;&darr; Rating</a>

                    </h5>
                </th>
                <th><h5>Ingredients</h5></th>
                <th><h5>                      </h5></th>
            </tr>
        </thead>

        <tbody id="tbody">
            @foreach (var cocktail in Model.FiveCocktailsList)
            {
                <tr>
                    <td>
                        <a asp-area="Cocktails" asp-controller="Cocktails" asp-action="Details" asp-route-id="@cocktail.Id">
                            <img src="@cocktail.Image" height="250" width="250" style="border-radius:25px; padding-top:5px; padding-bottom:5px">
                        </a>
                    </td>
                    <td><h5 style="padding-left:30px;"> @cocktail.Name</h5></td>

                    <td>
                        @if (cocktail.Rating == 0)
                        {
                            <i>Not rated yet!</i>
                        }
                        else
                        {
                            if (cocktail.Rating * 10 % 10 == 0)
                            {
                                for (int i = 0; i < cocktail.Rating - 1; i++)
                                {
                                    <font color="gold">
                                        <i class="fa fa-star" style="color:gold"></i>
                                    </font>
                                }
                                <font color="gold">
                                    <i class="fa fa-star" style="color:gold"><font size="2"> @cocktail.Rating</font></i>
                                </font>
                            }
                            else
                            {

                                for (int i = 0; i < cocktail.Rating - 1; i++)
                                {
                                    <font color="gold">
                                        <i class="fa fa-star" style="color:gold"></i>
                                    </font>
                                }
                                <font color="gold">
                                    <i class="fa fa-star-half" style="color:gold"> <font size="2"> @cocktail.Rating</font></i>
                                </font>
                                @*<span class="quntity">
                                    @Html.DisplayFor(modelItem => item.Rating)</span>*@
                            }
                        }

                    </td>
                    <td>
                        @foreach (var ingredient in cocktail.CocktailComponents)
                        {
                            <h5 style="padding-left:0px">
                                @ingredient.Ingredient
                            </h5>
                        }
                    </td>
                    <td style="padding-top:10px">
                        @if (this.User.IsInRole("Member") || this.User.IsInRole("Manager") || this.User.IsInRole("Administrator"))
                        {
                            <p>
                                <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="RateCocktail" asp-route-id="@cocktail.Id"><font style="color:gold"><i class="fa fa-star"></i> Rate Cocktail</font></a>
                            </p>

                        }
                        @if (this.User.IsInRole("Administrator") || this.User.IsInRole("Manager"))
                        {
                            <p>
                                <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="DownloadRecipe" asp-route-id="@cocktail.Id"><font style="color:gold"><i class="fa fa-arrow-circle-down"></i> Downoload Recipe</font></a>
                            </p>
                            <p>
                                <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="Edit" asp-route-id="@cocktail.Id"><font style="color:gold"><i class="fa fa-magic"></i> Edit Cocktail</font></a>
                            </p>
                            <p>
                                <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="Delete" asp-route-id="@cocktail.Id"><font style="color:gold"><i class="fa fa-trash-o"></i> Delete Cocktail</font></a>
                            </p>
                        }
                        <p>
                            <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="Details" asp-route-id="@cocktail.Id"><font style="color:gold"><i class="fa fa-search-plus"></i> Cocktail Details</font></a>
                        </p>
                    </td>
                </tr>
            }
        </tbody>
</table>
</div>
<center style="padding-bottom:20px">
    @if (Model.FiveCocktailsList.Count == 0)
    {
        <div class="card-body">
            <h3>This is all the Cocktails in the app yet!</h3>
        </div>
    }
    else
    {
        @*@if (Model.PrevPage == null)
            {
                <a class="btn btn-default btn-sm disabled"><h5 style="margin-bottom:-5px"> <i class="fa fa-arrow-circle-o-left"></i> Previous Page</h5></a>
            }
            else
            {
                <a asp-area="Cocktails" asp-controller="Cocktails" asp-action="ListCocktails" class="btn btn-default btn-sm" asp-route-orderByModel="@Model.SortOrder" asp-route-currPage="@Model.PrevPage"><h5 style="margin-bottom:-5px"> <i class="fa fa-arrow-circle-o-left"></i> Previous Page</h5></a>
                <a asp-area="Cocktails" asp-controller="Cocktails" asp-action="ListCocktails" class="btn btn-default btn-sm" asp-route-orderByModel="@Model.SortOrder" asp-route-currPage="@Model.PrevPage"><h5 style="margin-bottom:-5px">@Model.PrevPage</h5></a>
            }

            <button style="background-color:cornsilk" class="btn btn-default btn-sm disabled"><h5 style="margin-bottom:-5px; color:gold">@Model.CurrPage</h5></button>*@

        @if (Model.MoreToLoad == false)
