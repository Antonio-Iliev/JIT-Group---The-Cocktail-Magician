            <a class="btn btn-default btn-sm disabled"><h5 style="margin-bottom:-5px">Load more cocktails <i class="fa fa-arrow-circle-o-down"></i></h5></a>
        }
        else
        {
            @*<a asp-area="Cocktails" asp-controller="Cocktails" asp-action="ListCocktails" class="btn btn-default btn-sm " asp-route-orderByModel="@Model.SortOrder" asp-route-currPage="@Model.NextPage"><h5 style="margin-bottom:-5px">@Model.NextPage</h5></a>*@

