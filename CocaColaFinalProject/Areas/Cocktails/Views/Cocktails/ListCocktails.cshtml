@model List<CocktailViewModel>
@{
    ViewData["Title"] = "ListCocktails";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}



<table class="table">
    <thead>
        <tr>
            <th><h5>Cocktail's Picture</h5></th>
            <th><h5>Cocktail's Name</h5></th>
            <th><h5>Cocktail's Rating</h5></th>
            <th><h5>Cocktail's Ingredients</h5></th>
            <th><h5>                      </h5></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cocktail in Model)
        {
            <tr>
                <td><img src="@cocktail.Image" height="250" width="250" style="border-radius:25px; padding-top:5px; padding-bottom:5px"></td>
                <td><h5> @cocktail.Name</h5></td>
                
                <td>
                    @if (cocktail.Rating == 0)
                    {
                        <i>Not rated yet!</i>
                    }
                    else
                    {
                        if (cocktail.Rating * 10 % 10 == 0)
                        {
                            for (int i = 0; i < cocktail.Rating - 1; i++)
                            {
                                <font color="gold">
                                    <i class="fa fa-star"  style="color:gold"></i>
                                </font>
                            }
                            <font color="gold">
                                <i class="fa fa-star"  style="color:gold"><font size="2"> @Html.DisplayFor(modelItem => cocktail.Rating)</font></i>
                            </font>
                        }
                        else
                        {

                            for (int i = 0; i < cocktail.Rating - 1; i++)
                            {
                                <font color="gold">
                                    <i class="fa fa-star"  style="color:gold"></i>
                                </font>
                            }
                            <font color="gold">
                                <i class="fa fa-star-half"  style="color:gold"> <font size="2"> @Html.DisplayFor(modelItem => cocktail.Rating)</font></i>
                            </font>
                            @*<span class="quntity">
                @Html.DisplayFor(modelItem => item.Rating)</span>*@
                        }
                    }
                                
                            </td>
                <td> @foreach (var ingredient in cocktail.CocktailIngredients)
                {
                    <h5>
                    @ingredient.Ingredient.Name
                        </h5>
                }
                </td>
                <td style="padding-top:50px">
                    <a class="btn btn-default btn-sm" > <font style="color:gold" >rate cocktail</font> </a>
                </td>

            </tr>
        }
    </tbody>
</table>