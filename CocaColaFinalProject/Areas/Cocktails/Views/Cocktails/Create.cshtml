
@model CreateCocktailViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<center style="padding-bottom:50px">
    <h4></h4>
    <hr />
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1><img src="~/assets/images/content/createCocktailHeader.png" /> </h1>
            <form asp-area="Cocktails" asp-controller="Cocktails" asp-action="Create" method="post"
                  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.CocktailImage" class="control-label">Cocktail's Image</label>
                    <input asp-for="@Model.CocktailImage" style="padding-left:110px" class="form-control" />
                </div>
            
                <br />
                <div>
                    <label>Add Ingredients</label>
                    <table id="ingredients" class="table table-responsive">
                        <tbody>
                            <tr>
                                <th width="50%" valign="middle"><h6>Ingredient</h6></th>
                                <th><h6>Quantity</h6></th>
                                <th><h6>Units</h6></th>
                                <th></th>
                            </tr>
                            <tr class="tableRow">
                                <td>
                                    <select id="selectmenu" name="Ingredients[0].Ingredient"
                                            class="select-editable form-control" asp-items="@Model.IngredientsNames"
                                            input="text" placeholder="Choose Ingredients..."></select>
                                </td>
                                <td>
                                    <input name="Ingredients[0].Quantity" type="number" class="form-control" />
                                </td>
                                <td>
                                    <select class="form-control" name="Ingredients[0].Ingredient" asp-items="Html.GetEnumSelectList<Unit>()">
                                        <option hidden disabled selected value="">Choose Unit Type:</option>
                                    </select>
                                </td>
                                <td>
                                    <a class="xSignIngredients" onclick="removeRow(this)"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                    <input type="hidden" value="0" id="total_row">
                    <input class="btn btn-success btn-sm" type="button" onclick="addRow()" value="+ Add more ingredients">

                    <br />
                    <br />
                </div>
                <div class="form-group">

                    <textarea asp-for="@Model.Recipe" class="form-control" placeholder="Write the full recepie here..."> </textarea>

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</center>

<script>
    window.onload = function () {
        $('.js-example-basic-multiple').select2();
    };
</script>

