
@model CreateCocktailViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<center style="padding-bottom:50px">


    <h4></h4>
    <hr />
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1><img src="~/assets/images/content/createCocktailHeader.png" /> </h1>
            <form asp-area="Cocktails" asp-controller="Cocktails" asp-action="Create" method="post"
                  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.CocktailImage" class="control-label">Upload Image</label>
                    <input asp-for="@Model.CocktailImage" class="btn btn-primary btn-sm" />
                </div>
                @*<div class="form-group">
                        <label asp-for="@Model.Rating" class="control-label"></label>
                        <input asp-for="@Model.Rating" class="form-control" />
                        <span asp-validation-for="@Model.Rating" class="text-danger"></span>
                    </div>*@
            <div>
                <label class="control-label">Add Ingredients</label>
                <table id="ingredients" class="table table-responsive">
                    <tr>
                        <th>Ingredient</th>
                        <th>Quantity</th>
                        <th>Units</th>
                    </tr>
                    <tr class="tableRow">
                        <td >
                            <select id="selectmenu" asp-for="@Model.Ingredients[0].Ingredient"
                                    class="select-editable form-control" asp-items="@Model.IngredientsNames"
                                    input="text" placeholder="Choose Ingredients..."></select>
                            <input asp-for="@Model.Ingredients[0].Ingredient" class="form-control"
                                   type="text" placeholder="Or add a new one:" />
                        </td>
                        <td>
                            <input asp-for="@Model.Ingredients[0].Quantity" class="form-control" />
                        </td>
                        <td>
                            <select class="form-control" asp-for="@Model.Ingredients[0].Unit" asp-items="Html.GetEnumSelectList<Unit>()">
                                <option hidden disabled selected value="">Choose Unit Type:</option>
                            </select>
                        </td>
                    </tr>
                </table>
                <input type="hidden" value="0" id="total_row">
                <input class="btn btn-success btn-sm" type="button" onclick="addRow()" value="+ Add more ingredients">
                
                <br />
                <br />
            </div>
                <div class="form-group">

                    <textarea asp-for="@Model.Recipe" class="form-control" placeholder="Write the full recepie here..."> </textarea>

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</center>

