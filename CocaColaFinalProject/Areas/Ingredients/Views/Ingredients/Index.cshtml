@model IngredientsListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="hdr3">Ingredients List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h5>
                    Name
                </h5>
            </th>
            <th>
                <h5>
                    Brand
                </h5>
            </th>

            <th>
                <h5>
                    Country
                </h5>

            </th>
            <th>
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody id="tbodyInredients">
        @foreach (var item in Model.TenIngredientsList)
        {
            <tr>
                <td style="padding-right:200px">
                    <h5>
                        @item.Name
                    </h5>
                </td>
                <td style="padding-right:200px">
                    <h5>
                        @item.Brand
                    </h5>
                </td>
                <td style="padding-right:200px">
                    <h5>
                        @item.Country
                    </h5>
                </td>
                <td></td>
                <td>
                    @if (this.User.IsInRole("Administrator") || this.User.IsInRole("Manager"))
                    {
                        <p style="padding-right:-400px">
                            <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="Edit" asp-route-id="@item.Id"><font style="color:gold"><i class="fa fa-magic"></i> Edit Ingeredient</font></a>
                        </p>
                        <p>
                            <a class="btn btn-default btn-sm" asp-area="Cocktails" asp-controller="Cocktails" asp-action="Delete" asp-route-id="@item.Id"><font style="color:gold"><i class="fa fa-trash-o"></i> Delete Ingeredient</font></a>
                        </p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<center style="padding-bottom:20px">
    @if (Model.TenIngredientsList.Count == 0)
    {
        <div class="card-body">
            <h3>This is all the Cocktails in the app yet!</h3>
        </div>
    }
    else
    {

        @if (Model.MoreToLoad == false)
        {
            <a class="btn btn-default btn-sm disabled"><h5 style="margin-bottom:-5px">Load more cocktails <i class="fa fa-arrow-circle-o-down"></i></h5></a>
        }
        else
        {
            <a id="loadMoreIngredients" asp-area="Ingredients" asp-controller="Ingredients" asp-action="Index" class="btn btn-default btn-sm" data-currPage="@Model.CurrPage"><h5 style="margin-bottom:-5px; color:gold">Load more cocktails <i class="fa fa-plus-circle"></i></h5></a>
        }
    }
</center>
<script src="~/assets/js/jquery.min.js"></script>
<script src="~/assets/js/ingredientsPagination.js"></script>